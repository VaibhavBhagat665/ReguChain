# News & Blockchain APIs
NEWSAPI_KEY=your_newsapi_key_or_newsdata_io_key_starting_with_pub_
ETHERSCAN_API_KEY=your_etherscan_api_key

# Pathway Configuration (optional - fallback available)
PATHWAY_KEY=your_pathway_license_key_optional
PATHWAY_MODE=streaming
PATHWAY_STREAMING_MODE=realtime
PATHWAY_PERSISTENCE_BACKEND=filesystem
PATHWAY_PERSISTENCE_PATH=./pathway_data
PATHWAY_MONITORING_LEVEL=info

# Database
DATABASE_URL=sqlite:///./reguchain.db

# Vector Store
VECTOR_DB_TYPE=faiss
FAISS_INDEX_PATH=./faiss_index

# Embeddings
EMBEDDINGS_PROVIDER=huggingface
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDINGS_DIMENSION=384

# LLM Configuration (choose one or both)
# Option 1: OpenRouter (recommended for Mistral)
OPENROUTER_API_KEY=your_openrouter_api_key
LLM_PROVIDER=openrouter
LLM_MODEL=mistralai/mistral-7b-instruct
LLM_TEMPERATURE=0.2

# Option 2: Groq (alternative)
# GROQ_API_KEY=your_groq_api_key
# LLM_PROVIDER=groq
# LLM_MODEL=llama3-8b-8192
# LLM_TEMPERATURE=0.3

# Blockchain RPC (optional - uses public endpoints by default)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/demo
POLYGON_RPC_URL=https://polygon-rpc.com

# Risk Assessment Thresholds
RISK_SCORE_THRESHOLD=50
TRANSACTION_THRESHOLD=10000
